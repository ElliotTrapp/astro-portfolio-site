---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {

    --tw-color-dark-purple: #4c1d95;
    --tw-color-light-purple: #9333ea;
    --tw-color-orange: rgb(255, 107, 1);

    --color-teal: #5bbad5;
    --color-light-blue: rgb(59 130 246 / 0.5);

    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary:  var(--tw-color-dark-purple); 
    --aw-color-secondary: var(--tw-color-light-purple);
    --aw-color-accent:  var(--tw-color-orange);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(33, 39, 55);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary:  var(--tw-color-light-purple); 
    --aw-color-secondary: var(--tw-color-dark-purple);
    --aw-color-accent:  var(--tw-color-orange);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(229 236 246); /*#E5ECF6*/
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
