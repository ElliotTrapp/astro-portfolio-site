---
import '@fontsource/poppins';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --theme-white: #f0ebd8;
    --theme-light-blue: #748cab;
    --theme-medium-blue: #3e5c76;
    --theme-dark-blue: #1d2d44;
    --theme-black: #0d1321;

    --aw-font-sans: 'Poppins';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: var(--theme-dark-blue);
    --aw-color-secondary: var(--theme-medium-blue);
    --aw-color-accent: var(--theme-light-blue);

    --aw-color-text-heading: var(--theme-black);
    --aw-color-text-default: var(--theme-black);
    --aw-color-text-muted: rgb(var(--theme-black) / 66%);

    --aw-color-bg-page: var(--theme-white);

    --aw-color-bg-page-dark: var(--theme-black);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Poppins';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: var(--theme-light-blue);
    --aw-color-secondary: var(--theme-medium-blue);
    --aw-color-accent: var(--theme-dark-blue);

    --aw-color-text-heading: var(--theme-white);
    --aw-color-text-default: var(--theme-white);
    --aw-color-text-muted: rgb(var(--theme-white) / 66%);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
