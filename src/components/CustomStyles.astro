---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --light-green: #606c38;
    --dark-green: #283618;
    --off-white: #fefae0;
    --light-brown: #dda15e;
    --dark-brown: #bc6c25;
    --off-black: #212737;

    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: var(--dark-green);
    --aw-color-secondary: var(--light-green);
    --aw-color-accent: var(--dark-brown);

    --aw-color-text-heading: var(--off-black);
    --aw-color-text-default: var(--off-black);
    --aw-color-text-muted: rgba(var(--off-black), 0.66);
    --aw-color-bg-page: var(--off-white);

    --aw-color-bg-page-dark: var(--off-black);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: var(--light-green);
    --aw-color-secondary: var(--dark-green);
    --aw-color-accent: var(--light-brown);

    --aw-color-text-heading: var(--off-white);
    --aw-color-text-default: var(--off-white);
    --aw-color-text-muted: rgba(var(--off-white), 0.66);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
